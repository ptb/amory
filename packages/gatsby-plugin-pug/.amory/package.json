{
  "babel": {
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-syntax-dynamic-import",
      "@ptb/transform-react-pug"
    ],
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": false,
          "shippedProposals": true,
          "targets": {
            "node": "current"
          },
          "useBuiltIns": "entry"
        }
      ],
      "@babel/preset-react",
      "@babel/preset-flow"
    ]
  },
  "eslintConfig": {
    "extends": [
      "plugin:react-pug/all"
    ],
    "globals": {
      "pug": true
    },
    "plugins": [
      "react-pug"
    ]
  }
}
