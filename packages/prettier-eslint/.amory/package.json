{
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "printWidth": 78,
    "semi": false,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "scripts": {
    "js:tidy": "chokidar '**/*.js' -i '/node_modules|public/' -c 'prettier-eslint --write {path}'"
  }
}
