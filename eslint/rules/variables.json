{
  "rules": {
    "init-declarations": "off",
    "no-delete-var": "warn",
    "no-label-var": "warn",
    "no-restricted-globals": "off",
    "no-shadow": [
      "warn",
      {
        "allow": [
          "CSSTransition",
          "location"
        ],
        "builtinGlobals": true,
        "hoist": "all"
      }
    ],
    "no-shadow-restricted-names": "warn",
    "no-undef": "warn",
    "no-undef-init": "warn",
    "no-undefined": "warn",
    "no-unused-vars": [
      "warn",
      {
        "args": "all",
        "argsIgnorePattern": "^_",
        "vars": "all"
      }
    ],
    "no-use-before-define": "warn"
  }
}
