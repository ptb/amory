{
  "author": "Peter T Bosse II <ptb@ioutime.com> (http://ptb2.me/)",
  "ava": {
    "babel": false,
    "extensions": [
      "mjs"
    ],
    "failFast": false,
    "files": [
      "**/*.test.mjs"
    ],
    "require": [
      "esm"
    ],
    "sources": [
      "**/*.mjs"
    ],
    "verbose": false
  },
  "browser": "style.mjs",
  "browserslist": [
    "> 0.5%",
    "and_chr >=29",
    "and_ff >= 57",
    "and_qq >= 1.2",
    "and_uc >= 11.4",
    "android >= 5",
    "baidu >= 7.12",
    "bb >= 10",
    "chrome >= 29",
    "edge >= 12",
    "firefox >= 27",
    "ie >= 11",
    "ie_mob >= 11",
    "ios_saf >= 5",
    "last 2 versions",
    "not dead",
    "op_mob >= 12.1",
    "opera >= 16",
    "safari >= 7",
    "samsung >= 4"
  ],
  "description": "Atomic CSS-in-JS toolkit for browsers and server pre-rendering.",
  "devDependencies": {
    "@amory/eslint-config": "latest",
    "ava": "next",
    "esm": "latest",
    "flow-bin": "0.85.0",
    "nodemon": "latest",
    "npm-run-all": "latest",
    "nyc": "latest",
    "puppeteer-core": "latest",
    "rollup": "latest",
    "sinon": "latest",
    "terser": "3.10.11"
  },
  "engines": {
    "node": ">=8"
  },
  "eslintConfig": {
    "extends": [
      "@amory"
    ],
    "rules": {
      "jsdoc/require-example": "off",
      "jsdoc/require-param-description": "off",
      "jsdoc/require-returns-description": "off",
      "valid-jsdoc": "off"
    },
    "settings": {
      "react": {
        "version": "16.6.0"
      }
    }
  },
  "eslintIgnore": [
    "*.test.mjs",
    "prefix.mjs",
    "pub-sub.mjs",
    "react.mjs",
    "style.js",
    "style.mjs"
  ],
  "files": [
    "src/*",
    "react.mjs",
    "style.js",
    "style.mjs"
  ],
  "keywords": [
    "amory",
    "atomic",
    "style",
    "react",
    "ssr"
  ],
  "license": "MIT",
  "main": "style.js",
  "name": "@amory/style",
  "nodemonConfig": {
    "events": {
      "start": "echo \"\\x1Bc\""
    },
    "exec": "yarn watch",
    "ext": "mjs"
  },
  "nyc": {
    "exclude": [
      "**/*.test.mjs",
      "src/prefix.mjs",
      "react.mjs"
    ],
    "extension": [
      ".mjs"
    ],
    "temp-directory": "/tmp/.nyc_output"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": "https://github.com/ptb/amory/tree/master/style",
  "scripts": {
    "build": "run-s build:rollup build:uncomment1 build:terser build:uncomment2 build:header build:chomp",
    "build:chomp": "perl -pi -e 'chomp if eof' style.mjs",
    "build:header": "sed -i '' -e '1s;^;/*! @copyright Peter T Bosse II | @license MIT | @link github.com/ptb/amory *//* eslint-disable *//* @flow */;' style.mjs",
    "build:rollup": "rollup -c",
    "build:terser": "terser -c -m -o style.mjs --comments all --module style.mjs",
    "build:uncomment1": "sed -i '' -e 's;\\s*?//.*$;;' style.mjs",
    "build:uncomment2": "perl -00 -i -pe 's/(\\/(?:\\*)[^:*]*\\*+(?:[^*\\/][^*]*\\*+)*\\/|[^\\*]\\/(?:\\/)|\\n)//sg' style.mjs",
    "clean": "rm -rf node_modules yarn.lock",
    "lint": "eslint --ext .mjs .",
    "start": "nodemon",
    "test": "nyc ava",
    "tidy:js": "prettier-eslint --write **/*.mjs",
    "watch": "npm-run-all -s test lint"
  },
  "version": "2018.11.7-3"
}
